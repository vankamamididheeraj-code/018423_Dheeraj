@page
@model MyWebApplication.Pages.Trainings.AllTechnologiesModel
@{
}
<h2>Search Technologies by Trainer ID</h2>

<form method="post">
    <div class="form-group">
        <label for="trainerId">Trainer ID</label>
        <input type="number" asp-for="TrainerIdInput" class="form-control" placeholder="Enter Trainer ID" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

@if (Model.Technology != null && Model.Technology.Count > 0)
{
    <h3 class="mt-4">Technologies taught by Trainer ID: <strong>@Model.TrainerIdInput</strong></h3>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Technology ID</th>
                <th>Name</th>
                <th>Level</th>
                <th>Duration</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tech in Model.Technology)
            {
                <tr>
                    <td>@tech.TechnologyId</td>
                    <td>@tech.TechName</td>
                    <td>@tech.TechLevel</td>
                    <td>@tech.Duration</td>
                </tr>
            }
        </tbody>
    </table>
}